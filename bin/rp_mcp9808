#!/srv/robotice/bin/python

import sys
from oslo.config import cfg
from oslo.config import types

from robophery.i2c.mcp9808 import Mcp9808Module

common_opts = [
    cfg.Opt('name',
            short='n',
            default="mcp9808",
            help='Sensor name'),
    cfg.Opt('bus',
            short='b',
            default="1",
            help='I2C bus'),
    cfg.Opt('addr',
            short='a',
            default="0x18",
            help='I2C address'),
]

CONF = cfg.CONF
CONF.register_cli_opts(common_opts)
CONF(sys.argv[1:])

module = Mcp9808Module(CONF)
print(module.get_data)

#!/usr/bin/env python
# -*- coding: utf-8 -*-

import sys
from oslo_config import cfg
from oslo_config import types

from robophery.gpio.switch import SwitchModule

common_opts = [
    cfg.Opt('name',
            short='n',
            default="switch",
            help='Sensor name'),
    cfg.Opt('port',
            short='p',
            default="20",
            help='GPIO port'),
]

CONF = cfg.CONF
CONF.register_cli_opts(common_opts)
CONF(sys.argv[1:])

module = SwitchModule(CONF)
print(module.get_data)

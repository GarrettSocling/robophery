#!/usr/bin/env python
# -*- coding: utf-8 -*-

import sys
from oslo_config import cfg
from oslo_config import types

from robophery.ble.flower_power import FlowerPowerModule

common_opts = [
    cfg.Opt('name',
            short='n',
            default="flower_power",
            help='Sensor name'),
    cfg.Opt('mac',
            short='m',
            help='MAC address'),
]

CONF = cfg.CONF
CONF.register_cli_opts(common_opts)
CONF(sys.argv[1:])

module = FlowerPowerModule(CONF)
print(module.get_data)

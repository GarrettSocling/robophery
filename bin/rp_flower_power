#!/usr/bin/env python
# -*- coding: utf-8 -*-

import sys
from oslo_config import cfg
from robophery.ble.flower_power import FlowerPowerModule

common_opts = [
    cfg.Opt('name',
            short='n',
            default="flower-power",
            help='Parrot Flower Power sensor name'),
    cfg.Opt('addr',
            short='a',
            help='MAC address of Flower Power sensor'),
]

CONF = cfg.CONF
CONF.register_cli_opts(common_opts)
CONF(sys.argv[1:])

module = FlowerPowerModule(CONF)
print(module.get_data)
